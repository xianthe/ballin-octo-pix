= form_for @cat, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :age, :class => 'control-label'
    .controls
      = f.number_field :age, :class => 'number_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :image, :class => 'control-label'
    .controls
      = f.text_area :image, :class => 'text_area'
  .control-group
    = f.label :page_id, :class => 'control-label'
    .controls
      = f.number_field :page_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), cats_path, :class => 'btn'
