- model_class = Cat
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @cat.name
%p
  %strong= model_class.human_attribute_name(:age) + ':'
  %br
  = @cat.age
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @cat.description
%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  = @cat.image
%p
  %strong= model_class.human_attribute_name(:page_id) + ':'
  %br
  = @cat.page_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cats_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_cat_path(@cat), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), cat_path(@cat), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
